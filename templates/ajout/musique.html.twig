{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="{{ asset('assets/css/nav.css') }}" rel="stylesheet">
{% endblock %}
{% block title %}Hello AjoutController!{% endblock %}

{% block body %}
{% dump auteur %}

<nav>
    <div class="nav_i"><a href="{{path('app_accueil')  }}"><i class="fa-solid fa-arrow-left fa-xl"></i></a></div>
    <div id="test"><img id="logo_img" src="{{ asset('assets/img/logo.svg') }}" /><a href="{{ path('app_accueil') }}" id="logo">SpeakMusic</a></div>
</nav>

<div class="section_auteur">
    <div id='img'>
    </div>

    <div id="info">
        <h3>Auteur choisi :</h3>
        <p>{{auteur.nom}}</p>
    </div>
</div>
<section>
    {{ form_start(form) }}
    <div class="illustration">
        {{ form_row(form.Illustration) }}
    </div>
    

        <p class="champ">
            {{ form_label(form.nom) }} <br />
            {{ form_widget(form.nom) }}
        </p>

        <p class="champ">
            {{ form_label(form.lien) }} <br />
            {{ form_widget(form.lien) }}
        </p>

        <p class="champ">
            {{ form_label(form.paroles) }} <br />
            {{ form_widget(form.paroles, {'attr': {'class': 'paroles'}}) }}
        </p>
            
        {{ form_row(form.submit) }}
    {{ form_end(form) }}
</section>

<style>
    .illustration 
    {
        display: none;
    }
    .paroles 
    {
        height: 9vw;
        padding-top: 2%;
    }
    section
    {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    form {
        margin-top: 4%;
        width: 50vw;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    button
    {
        margin-top: 4%;
        height: 5vh;
        width: 10vw;
        border: none;
        background-color: black;
        border-radius: 5px;
        align-items: middle;
        color: white;
    }
    input, textarea
    {
        margin-top: 10px;
        margin-bottom: 2%;
        border-radius: 15px;
        width: 20vw;
        height: 5vh;
        border: 2px solid black;
        padding-left: 10px;
    }

    .section_auteur {
        border-radius: 20px;
        max-width: 40vw;
        margin: auto;
        display:flex;
        justify-content: space-around;
        align-items: flex-start;
        background-color: rgb(220, 220, 220);
        padding: 2%;
    }
    #info 
    {
        margin-left: 5%;
    }
    #img 
    {
        width: 10vw;
        height: 10vw;
        border-radius: 20px;
        background-image: url('{{ asset('assets/illustrations/'~ auteur.Illustration) }}');
        background-size: cover;
    }
    nav 
    {
        display:flex;
        justify-content: space-between;
        align-items: center;
        color: grey;
        margin-left: 4%;
        margin-top: 3%;
        margin-bottom : 5%;
    }
    i 
    {
        color:white;
    }
    .nav_i 
    {
        width:40px;
        height: 40px;
        background-color:rgb(65, 65, 65);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }
    #logo_img 
    {
        width: 10%;
        margin-right: 10px;
    }
    #logo 
    {
        font-size: 1.2em;
        color: black;
        font-weight: bold;
    }
    .red
    {
        color:  #EE6659
    }
    input:focus,
    select:focus,
    textarea:focus,
    button:focus 
    {
    outline: none;
    }
    a 
    {
        text-decoration: none;
        color : grey;
    }
    * 
    {
        text-align: center;
    }
</style>
{% endblock %}