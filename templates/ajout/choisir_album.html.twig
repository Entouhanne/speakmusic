
{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="{{ asset('assets/css/nav.css') }}" rel="stylesheet">
{% endblock %}
{% block title %}Choisir l'auteur{% endblock %}
{% block body %}

{% dump test %}
<nav>
    <div class="nav_i"><a href="{{path('app_accueil')  }}"><i class="fa-solid fa-arrow-left fa-xl"></i></a></div>
    <div id="test"><img id="logo_img" src="{{ asset('assets/img/logo.svg') }}" /><a href="{{ path('app_accueil') }}" id="logo">SpeakMusic</a></div>
</nav>

<header>
    <h2>Commencez par choisir l'auteur de la musique que vous voulez ajouter :</h2>
    {{ form(form) }}
    <p>Votre recherche : {{slug}} </p>
</header>

{% for item in test %}
{% dump item %}
<div class="section" style="
background-image: linear-gradient(-30deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.7)),
url('{{ asset('assets/illustrations/'~ item.Illustration) }}'); ">
    <h2>{{item.nom}}</h2>
    <div id='stats'>
    </div>
    <div class="check">
        <div class="etoiles">

        </div>
        <a href="{{ path('app_ajout_musique', {id_album: item.id}) }}">

        <div class="go">
            <i class="fa-solid fa-arrow-right fa-xl "></i>
        </div>
        </a>
    </div>
  </div>

{% endfor %}

<style>
    nav 
    {
        display:flex;
        justify-content: space-between;
        align-items: center;
        color: grey;
        margin-left: 4%;
        margin-top: 3%;
        margin-bottom : 5%;
    }
    i 
    {
        color:white;
    }
    .nav_i 
    {
        width:40px;
        height: 40px;
        background-color:rgb(65, 65, 65);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }
    #logo_img 
    {
        width: 10%;
        margin-right: 10px;
    }
    #logo 
    {
        font-size: 1.2em;
        color: black;
        font-weight: bold;
    }
    .red
    {
        color:  #EE6659
    }

    button
    {
        height: 41px;
        width: 5vw;
        border: none;
        background-color: black;
        border-radius: 7px;
        align-items: middle;
    }
    #submit_i, .go i
    {
        color: white;
    }
    .section
    {
        margin-top: 5%;
        width: 50%;
        padding:2%;
        background-color: #808080;
        text-align: left;
        margin:auto;
        border-radius: 20px;
    

        background-size: cover;
        margin-bottom: 5%;
        box-shadow: 2px 2px 20px rgb(180, 169, 169);
        transition : transform 300ms;
    }
    .section:hover {
        transform: scale(1.05);
    }

    .big
    {
        font-size: 2em;
    }
    p 
    {
        margin:5px;
    }
    .check
    {
        display:flex;
        justify-content: space-between;
        align-items: center;
    }
    .go 
    {
        background:black;
        border-radius:50%;
        width: 50px;
        height:50px;
        display:flex;
        justify-content: center;
        align-items: center;
        box-shadow: 2px 3px 20px white;
    }
    .go i 
    {
        margin: auto;
    }
    a 
    {
        text-decoration: none;
        color : grey;
    }

    .pagination 
    {
        display: flex;
        flex-direction: row;
        width: 40vw;
        justify-content: center;
    }

    .page, .current
    {
        width: 2vw;
        height: 2vw;
        border: 2px solid black;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 5px;
        margin-right: 2%;
    }
    .next, .previous
    {
        width: 2vw;
        height: 2vw;
        border: 2px solid black;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        margin-right: 2%;
    }
    #conteneur_pagination
    {
        display: flex;
        justify-content: center;
        padding-bottom: 3%;
    }

    header
    {
        margin-bottom: 5%;
        text-align: center;
    }

</style>
{% endblock %}




