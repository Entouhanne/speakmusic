        align-items: center;
        color: grey;
        margin-left: 4%;
        margin-right: 4%;
        margin-top: 3%;
    }
    i 
    {
        color:white;
    }
    .nav_i 
    {
        width:35px;
        height: 35px;
        background-color:rgb(65, 65, 65);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }
    #logo_img 
    {
        width: 10%;
        margin-right: 10px;
    }
    #logo 
    {
        font-size: 1.2em;
        color: black;
        font-weight: bold;
    }
    .red
    {
        color:  #EE6659;
    }
    .send
    {
        border-radius:15px;
        background-color: black;
        color:white;
        border: none;
        text-align: center;
        height: 7vh;
        width: 10vw;
        margin-top: 3%;
    }
    .normal_input
        {
            border-radius: 15px;
            width: 50%;
            height: 6vh;
            border: 2px solid black;
            padding-left: 10px;
            margin-top: 2%;
        }
        input:focus,
        select:focus,
        textarea:focus,
        button:focus 
        {
        outline: none;
        }
    a 
