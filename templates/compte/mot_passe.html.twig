{% extends 'base.html.twig' %}
{% block title %}Modifier mon mot de passe {% endblock %}
{% block body %}
<nav>
    <div class="nav_i"><a href="{{path('app_accueil')  }}"><i class="fa-solid fa-arrow-left fa-l"></i></a></div>
    <div id="test"><a href="{{ path('app_accueil') }}" id="logo">SpeakMusic</a></div>
</nav>

<section>
    <h1>Modifier mon mot de passe</h1>
    {{ form_start(form) }}
        <p> Votre mot de passe actuel : <br />
        {{ form_widget(form.old_password, {'attr': {'class': 'normal_input'}}) }}</p>

        <p> Votre nouveau mot de passe :  <br />
        {{ form_widget(form.new_password.first, {'attr': {'class': 'normal_input'}}) }}</p>

        <p> Répétez votre nouveau mot de passe :  <br />
        {{ form_widget(form.new_password.second, {'attr': {'class': 'normal_input'}}) }}</p>

        {{ form_widget(form.submit, {'attr': {'class': 'send'}}) }}</p>

        
    {{ form_end(form) }}
</section>



<style>
    body
    {
        margin:0;
        padding:0;
        font-family: sans-serif;
        text-align:left;
    }
    nav 
    {
        display:flex;
